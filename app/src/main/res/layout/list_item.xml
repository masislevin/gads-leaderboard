<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/leaderboard_image"
            android:layout_width="@dimen/image_square_dimension"
            android:layout_height="@dimen/image_square_dimension"
            android:contentDescription="@string/dummy_list_item_content_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:weightSum="70"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_leader_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding"
                android:text="@string/dummy_name"
                android:textSize="@dimen/text_size_names"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_leader_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding"
                android:text="@string/dummy_list_item_content_description"
                android:textSize="@dimen/text_size_learner_details" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>